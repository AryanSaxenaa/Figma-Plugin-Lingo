{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ES6"
        ],
        "strict": true,
        "moduleResolution": "node",
        "types": [
            "@figma/plugin-typings"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true
    },
    "include": [
        "src/plugin/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/ui"
    ]
}